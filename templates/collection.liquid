<section
  class="
    px-6
    pt-2
    xs:pt-4
    sm:py-8 sm:px-12
    flex flex-col
    items-center
    justify-center
  "
>
  <h1 class="text-gray-700 text-2xl lg:text-3xl xl:text-4xl mb-4 sm:mb-8">
    {{ collection.title }}
  </h1>
  <div
    class="
      w-full
      sm:w-5/6
      md:w-3/4
      xl:w-2/3
      mx-auto
      grid grid-cols-1
      sm:grid-cols-2
      lg:grid-cols-3
      row-auto
      gap-8
      mb-8
    "
  >
    <!-- prettier-ignore -->
    {% for product in collection.products %} 
      {% render 'product-card', product: product %} 
    {% endfor %}
  </div>
</section>
