<section
  class="
    px-6
    pt-2
    xs:pt-4
    sm:py-8 sm:px-12
    flex flex-col
    items-center
    justify-center
  "
>
  <h1 class="text-gray-700 text-2xl lg:text-3xl xl:text-4xl mb-4 sm:mb-8">
    {{ section.settings.title }}
  </h1>
  <div
    class="
      w-full
      sm:w-5/6
      md:w-3/4
      xl:w-2/3
      mx-auto
      grid grid-cols-1
      sm:grid-cols-2
      lg:grid-cols-3
      row-auto
      gap-8
      mb-8
    "
  >
		{% for collection in collections %}
			{% if collection.all_products_count > 0 %}
				<figure class="h-72 border border-gray-300 rounded-sm shadow relative flex justify-center items-center group">
					<a href="{{ collection.url }}" class="absolute top-0 left-0 w-full">
						{% if collection.featured_image != blank %}
							{% assign collection_image = collection.featured_image %}
						{% else %}
							{% assign collection_image = collection.products.first.image %}
						{% endif %}

						<img src="{{ collection_image | img_url: '590x590' }}" alt="{{ collection.title | escape }}" class="h-72 w-full z-0">
					</a>
					<figcaption class="opacity-0 group-hover:opacity-100 transition-all duration-300 z-10">
						<h2 class="text-gray-700 text-xl lg:text-2xl py-2 px-4 bg-gray-100 border border-gray-100 rounded-sm shadow">
							<a href="{{ collection.url }}">
								{{ collection.title }}
							</a>
						</h2>
					</figcaption>
				</figure>
			{% endif %}
		{% endfor %}
  </div>
</section>

{% schema %}
{
	"name": "Template List Collections",
	"settings": [
		{
			"type": "text",
			"id": "title",
			"default": "Collections",
			"label": "Collections List Title"
		}
	]
}
{% endschema %}