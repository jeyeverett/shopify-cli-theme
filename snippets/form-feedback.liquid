{% if form.errors %}
<span class="w-full sm:w-3/4 xl:w-1/2">
  <span
    class="
      mb-4
      px-2
      py-1
      flex flex-col
      justify-center
      items-center
      w-full
      text-red-800
      border border-red-300
      bg-red-200
    "
  >
    <p class="flex">
      {% render 'icon-error' %}
      <span class="ml-2">Failed to send your message</span>
    </p>
    <ol>
      {% for error in form.errors %}
      <li class="text-red-800 py-2 list-decimal list-inside">
        {{ form.errors.translated_fields[error] | capitalize }}
        {{ form.errors.messages[error] }}
      </li>
      {% endfor %}
    </ol>
  </span>
  {% elsif form.posted_successfully? %}
  <span
    class="
      mb-4
      px-2
      py-1
      flex
      justify-center
      w-full
      text-green-800
      border border-green-300
      bg-green-200
    "
  >
    {% render 'icon-success' %}
    <p class="ml-2">Message sent!</p>
  </span>
</span>
{% endif %}
