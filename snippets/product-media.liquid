<div class="swiper-slide flex justify-center items-center">
	{% case media.media_type %} 
		{% when 'image' %}
			<img
				src="{{ media | img_url: 'large' }}"
				alt="{{ media.preview_image.alt }}"
				class="swiper-image-{{ media.id }}"
			/>
		{% when 'external_video' %} 
			<span class="w-2/3 flex flex-col items-center justify-center">
				{{ media | external_video_tag: class: 'w-full' }}
			</span>
		{% when 'video' %} 
			<span class="w-2/3 flex flex-col items-center justify-center">
				{{ media | video_tag: controls: true, class: 'w-full cursor-pointer' }}
			</span>
		{% when 'model' %} 
			{{ media | model_viewer_tag }}
		{% else %} 
			{{ media | media_tag }}
	{% endcase %}
</div>
