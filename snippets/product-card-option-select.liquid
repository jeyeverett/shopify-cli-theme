<div
  @click="toggleOptionsList(option)"
  class="relative cursor-pointer select-none leading-none px-2 py-1 border border-gray-300 rounded-sm shadow flex items-center justify-center"
>
  <span class="text-sm absolute left-0 pl-2 uppercase tracking-wide text-gray-700">
    @{option.name}
  </span>
  <span class="font-light text-gray-700 ml-2 text-sm">
    @{form.selected[option.name]}
  </span>
  <transition name="select-option">
    <ul
      v-show="option.visible"
      class="w-full p-2 absolute bottom-full left-0 z-50 text-gray-700 border border-gray-400 rounded-sm shadow bg-white mx-auto"
    >
      <li
        v-for="(value, index) in option.values"
        :key="variantId + '-' + value"
        class="text-sm text-center px-1 hover:bg-gray-200 transition-all cursor-pointer"
        @click.stop="updateSelected(option, value)"
      >
        <span :class="{ 'selected-option': isSelected(option, value)}">
          @{value}
        </span>
      </li>
    </ul>
  </transition>
</div>
<div
  class="w-full h-full fixed top-0 left-0 z-0"
  v-show="option.visible"
  @click="closeAllOptions"
></div>
